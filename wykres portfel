const revenueElement = document.getElementById("revenueAmount") as HTMLElement;

// Prosty przykład aktualizacji przychodu — symulacja zmian
let revenue = 2064;

function updateRevenue() {
  const change = Math.floor(Math.random() * 500 - 250);
  revenue = Math.max(0, revenue + change);
  revenueElement.textContent = `$${revenue.toLocaleString("en-US")}`;

  // animacja odświeżenia
  revenueElement.classList.remove("animate");
  void revenueElement.offsetWidth; // reset animacji
  revenueElement.classList.add("animate");
}

setInterval(updateRevenue, 3000);

