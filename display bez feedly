  <script>
    // animacja zmiany wartości
    let count = 6;
    const el = document.getElementById('userCount');

    setInterval(() => {
      count += Math.floor(Math.random() * 3) - 1; // symulacja zmian
      if (count < 0) count = 0;
      el.textContent = count;
    }, 2000);
  </script>

