/* styl tÅ‚a i paska na canvasie */
canvas {
  transform: rotate(-90deg); /* obrÃ³t Å¼eby start byÅ‚ u gÃ³ry */
}


const canvas = document.getElementById("batteryCanvas");
const ctx = canvas.getContext("2d");
const percentText = document.getElementById("batteryPercent");

let batteryValue = 75; // wartoÅ›Ä‡ poczÄ…tkowa (w procentach)
const color = "#4cd964"; // zielony kolor paska (staÅ‚y, jak chciaÅ‚aÅ›)

/**
 * Funkcja rysujÄ…ca okrÄ…g procentowy (gauge)
 */
function drawBatteryGauge(value) {
  const size = canvas.width;
  const center = size / 2;
  const radius = center - 8;
  const startAngle = 0;
  const endAngle = 2 * Math.PI;

  ctx.clearRect(0, 0, size, size);

  // 1ï¸âƒ£ TÅ‚o (peÅ‚ne kÃ³Å‚ko szare)
  ctx.beginPath();
  ctx.arc(center, center, radius, startAngle, endAngle);
  ctx.strokeStyle = "#3a3a3c"; // ciemnoszary pierÅ›cieÅ„
  ctx.lineWidth = 10;
  ctx.stroke();

  // 2ï¸âƒ£ Pasek pokazujÄ…cy poziom baterii
  const fraction = Math.min(Math.max(value / 100, 0), 1); // ograniczamy do 0â€“1
  const progressAngle = startAngle + fraction * endAngle;

  ctx.beginPath();
  ctx.arc(center, center, radius, startAngle, progressAngle);
  ctx.strokeStyle = color; // kolor paska
  ctx.lineWidth = 10;
  ctx.lineCap = "round";
  ctx.stroke();

  // 3ï¸âƒ£ Tekst aktualizacji (w Å›rodku)
  percentText.textContent = `${Math.round(value)}%`;
}

/**
 * Funkcja do dynamicznej zmiany wartoÅ›ci baterii
 * np. updateGauge(42)
 */
function updateGauge(newValue) {
  batteryValue = newValue;
  drawBatteryGauge(batteryValue);
}

// pierwsze rysowanie
drawBatteryGauge(batteryValue);

// PRZYKÅAD: symulacja zmian (moÅ¼na usunÄ…Ä‡)
let demoVal = 75;
setInterval(() => {
  demoVal = (demoVal + 5) % 101;
  updateGauge(demoVal);
}, 2000);
