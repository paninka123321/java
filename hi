js:

const canvas = document.getElementById("batteryCanvas");
const ctx = canvas.getContext("2d");
const percentText = document.getElementById("batteryPercent");

// skalowanie pod urzÄ…dzenie - moze pomoze w rozpikselowanych krawedziach
const scale = window.devicePixelRatio || 1;
canvas.width = 80 * scale;  // dopasuj do swojego rozmiaru
canvas.height = 80 * scale;
ctx.scale(scale, scale);

let batteryValue = 75; // wartoÅ›Ä‡ poczÄ…tkowa (w procentach) <- wartoÅ›Ä‡ do z czytania z DSL
const color = "#4cd964"; // zielony kolor paska

// Funkcja rysujÄ…ca okrÄ…g procentowy (gauge) 
function drawBatteryGauge(value) {
  const size = 80;
  const center = size / 2;
  const radius = center - 8;
  const startAngle = 0;
  const endAngle = 2 * Math.PI;

  ctx.clearRect(0, 0, size, size);

  // Samo szare kÃ³Å‚o - leÅ¼ace jako backround dla wyÅ›wietlanej potem wartoÅ›ci 
  ctx.beginPath();
  ctx.arc(center, center, radius, startAngle, endAngle);
  ctx.strokeStyle = "#3a3a3c"; // ciemnoszary pierÅ›cieÅ„
  ctx.lineWidth = 10;
  ctx.stroke();

  // Pasek pokazujÄ…cy poziom baterii - naÅ‚oÅ¼ony juÅ¼ na szare kÃ³Å‚ko
  const fraction = Math.min(Math.max(value / 100, 0), 1); // ograniczamy do 0â€“1 (bo max 100%, ale oczywiÅ›cie juÅ¼ na produkcje moÅ¼na zmieniÄ‡)
  const progressAngle = startAngle + fraction * endAngle;

  ctx.beginPath();
  ctx.arc(center, center, radius, startAngle, progressAngle);
  ctx.strokeStyle = color; // kolor paska
  ctx.lineWidth = 10;
  ctx.lineCap = "round";
  ctx.stroke();

  // Tekst aktualizacji (w Å›rodku)
  percentText.textContent = `${Math.round(value)}%`;
}


// Dynamicznej zmiany wartoÅ›ci baterii dla prezentacji
function updateGauge(newValue) {
  batteryValue = newValue;
  drawBatteryGauge(batteryValue);
}

// pierwsze rysowanie
drawBatteryGauge(batteryValue);

// PRZYKÅAD: symulacja zmian
let demoVal = 75;
setInterval(() => {
  demoVal = (demoVal + 5) % 101;
  updateGauge(demoVal);
}, 2000);



