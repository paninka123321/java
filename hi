/* procent po prawej stronie */
.battery-percent {
  font-size: 14px;
  font-weight: 600;
}

const fill = document.getElementById("batteryFill");
const percentText = document.getElementById("batteryPercent");

/**
 * Funkcja aktualizujÄ…ca pasek
 * @param {number} value - poziom procentowy baterii (0â€“100)
 */
function updateBar(value) {
  const percent = Math.min(Math.max(value, 0), 100); // ograniczenie do zakresu
  fill.style.width = percent + "%";
  percentText.textContent = percent + "%";
}

// przykÅ‚ad dynamicznej zmiany co 2 sekundy (moÅ¼na usunÄ…Ä‡)
let demo = 90;
setInterval(() => {
  demo = (demo + 10) % 110;
  updateBar(demo);
}, 2000);

// poczÄ…tkowe ustawienie
updateBar(90);
